@using Core.Entities
@model Business.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}




<!-- SECTIONS START -->
<section id="intro">
    <div class="container">
        <div class="row">
            <div class="register-title d-flex justify-content-center">
                <b>Dynamex-ə xoş gəlmişsiniz!</b>
            </div>
            <div class="register-description d-flex justify-content-center">
                <p>Şəxsi hesabınızı yaradın!</p>
            </div>
        </div>
    </div>
</section>
<section id="register">
    <div class="container">
        <div class="row">
            <div class="left col-lg-7 col-md-12">
                <div class="register-form">
                    <div class="title">
                        Qeydiyyat formu
                    </div>
                    <form method="post" class="form col-12 natural-person">
                        <div class="form-comp">
                            <div class="form-group col-5 d-flex flex-column">
                                <input type="text" id="name" asp-for="Name" placeholder="Ad" min="3" max="12" required>
                            </div>
                            <div class="form-group col-5 d-flex flex-column">
                                <input type="text" id="surname" asp-for="Surname" placeholder="Soyad" min="3" max="12" required>
                            </div>
                        </div>
                        <div class="form-comp">
                            <div class="form-group col-5 d-flex flex-column">
                                <input type="email" id="email" asp-for="Email" placeholder="Email" maxlength="30" required>
                            </div>
                            <div class="form-group col-5 d-flex flex-column">
                                <input type="text" id="id-pin" asp-for="PhoneNum"  minlength="7" maxlength="15" placeholder="Mobil nömrə" required>
                            </div>
                        </div>
                        <div class="form-comp">
                            <div class="form-group col-5 d-flex flex-column">
                                <input type="text" id="date" placeholder="Doğum tarixi" asp-for="BirthDay" style="cursor: pointer;" onfocus="(this.type='date')" onblur="(this.type='text')" required>
                            </div>
                            <div class="form-group col-5 d-flex flex-column">
                                <select name="nationality" id="nationality" class="nationality" required>
                                    <option hidden>Vətəndaşlıq</option>
                                    <option value="non-resident">Başqa ölkənin vətəndaşı (Qeyri-rezident)</option>                      
                                    <option value="resident">Azərbaycan Respublikasının vətəndaşı (Rezident)</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-comp">
                            <div class="form-group col-5 d-flex flex-column">
                                <input type="text" id="id-pin" asp-for="PassportNumber" minlength="7" maxlength="12" required placeholder="Şəxiyyət vəsiqəsi nömrəsi">
                            </div>
                            <div class="form-group col-5 d-flex flex-column">
                                <input type="text" id="id-pin" asp-for="PassportFin" minlength="7" maxlength="7" required placeholder="FIN kod">
                            </div>
                          
                        </div>
                        <div class="form-comp">
                            <div class="form-group col-5 d-flex flex-column">
                                <select class="city" id="city" asp-for="CityId" required>
                                    <option hidden>Şəhər</option>
                                    @foreach (var item in (List<City>)ViewBag.city)
                                    {
                                        <option value="@item.Id">@item.Name</option>

                                    }
                                </select>
                            </div>
                            <div class="form-group col-5 d-flex flex-column">
                                <select asp-for="FilialId" id="branch" class="branch" required>
                                    <option hidden>Filial</option>
                                    @foreach (var item in (List<Filial>)ViewBag.filial)
                                    {
                                        <option value="@item.Id">@item.Name</option>

                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-comp" style="width: 79.5%;">
                            <div class="form-group col-10 d-flex flex-column">
                                <input type="text" id="address" asp-for="Location" class="address"  placeholder="Ünvan" maxlength="50" required>
                            </div>
                        </div>
                        <div class="form-comp">
                            <div class="form-group col-5 d-flex flex-column">
                                <input type="password" asp-for="Password" id="password" placeholder="Şifrə" minlength="8" maxlength="30" required>
                            </div>
                            <div class="form-group col-5 d-flex flex-column">
                                <input type="password" asp-for="PasswordConfirm" id="password" placeholder="Təkrar şifrə" minlength="8" maxlength="30" required>
                            </div>
                        </div>
                        <div class="form-comp">
                            <div class="form-group col-5 d-flex align-items-center gap-2">
                                <input type="checkbox" id="agreement" name="agreement" required>
                                <div class="text">
                                    <a href="./agreement.html" style="color: #15b2ec;">
                                        İstifadəçi Şərtləri
                                    </a>
                                    <span style="font-size: 13px">ilə razıyam</span>
                                </div>
                            </div>
                            <div class="form-group col-5 d-flex">
                                <a href="https://youtu.be/mn-va-DWDmk" target="_blank" class="d-flex align-items-center">
                                    <i><span class="iconify" data-icon="octicon:video-16" data-height="16"></span></i>
                                    <span style="margin-left: .5rem;">Qeydiyyat prosesini izləyin</span>
                                </a>
                            </div>
                        </div>
                        <div asp-validation-summary="ModelOnly" style="padding:5%" class="text-danger"></div>

                        <div class="btn-wrap d-flex justify-content-center">
                            <button class="register btn" type="submit">
                                Qeydiyyatdan keç
                            </button>
                        </div>
                    </form>
                    <div class="do-you text d-flex justify-content-center gap-2 mt-2">
                        <span style="font-size: 13px">Hesabınız var?</span>
                        <a asp-controller="Account" asp-action="Login" style="color: #15b2ec;">Daxil olun!</a>
                    </div>
                </div>
            </div>
            <div class="right col-lg-5">
                <img src="/assets/imgs/register/f_reg_img.svg" alt="" draggable="false">
                <div class="text">
                    <span style="font-size: 13px">Hesabınız var?</span>
                    <a asp-controller="Account" asp-action="Login" style="color: #15b2ec;">Daxil olun!</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- SECTIONS END -->