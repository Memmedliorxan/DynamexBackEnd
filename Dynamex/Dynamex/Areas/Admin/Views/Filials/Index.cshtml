@using Core.Entities
@model IEnumerable<Filial>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

    <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                      <table class="table table-dark">
                          <thead>
                          <tr>
                              <th> # </th>
                              <th> Name </th>
                              <th> Settings </th>
                          </tr>
                          </thead>
                          <tbody>
                          @foreach(var filial in Model.Where(f=>f.IsDeleted==false))
                          {
                              <tr>
                                  <td> @count </td>
                                  <td> @filial.Name </td>
                                  <td>
                                      <a asp-controller="Filials" asp-action="Update" asp-route-id="@filial.Id" class="btn btn-primary">Update</a>
                                      <a asp-controller="Filials" asp-action="Delete" asp-route-id="@filial.Id" class="btn btn-danger">Delete</a>
                                  </td>
                              </tr>
                              count++;
                          }
                          </tbody>
                      </table>
                      <div class="justify-content-center" style="text-align: center">
                          <a asp-controller="Filials" asp-action="Create" style="margin: 2%" class="btn btn-success">Create</a>
                      </div>
                  </div>
                </div>
              </div>