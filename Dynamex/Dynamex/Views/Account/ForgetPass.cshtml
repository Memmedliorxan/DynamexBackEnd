@model Business.ViewModels.ForgetPassViewModel
@{
    ViewData["Title"] = "ForgetPass";
}





<!-- SECTIONS START -->
<section id="intro">
    <div class="container">
        <div class="row">
            <div class="faq-title d-flex justify-content-center">
                <b>Dynamex-ə xoş gəlmişsiniz!</b>
            </div>
        </div>
    </div>
</section>
<section id="login">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 left">
                <div class="title">
                    <b>Şifrənizi bərpa edin</b>
                </div>
                <div class="form">
                    <form method="post" class="form-group">
                        <div class="email">
                            <label for="Email">Email</label> <br>
                            <input asp-for="Email" type="email" id="Email"> <br>
                            <span class="error" style="display: none;">Email boş qoyula bilməz</span>
                        </div>
                        <button type="submit">Send</button>
                        <span href="" class="reset" style="cursor: pointer; font-size: 13px; font-weight: 500;">Şifrəni yenilə</span>
                    </form>
                </div>
            </div>
            <div class="col-lg-5 right">
                <div class="login-image-wrap">
                    <img src="~/assets/imgs/login/login.svg" alt="Login Image" class="login-image">
                </div>
                <div class="text">
                    <span>Hesabınız yoxdur?</span>
                    <a asp-controller="Account" asp-action="ForgetPass">Qeydiyyatdan keçin!</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- SECTIONS END -->
