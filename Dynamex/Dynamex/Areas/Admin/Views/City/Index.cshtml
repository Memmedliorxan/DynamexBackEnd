@using Core.Entities
@model IEnumerable<City>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <table class="table table-dark">
                <thead>
                <tr>
                    <th> # </th>
                    <th> Name </th>
                    <th> Settings </th>
                </tr>
                </thead>
                <tbody>
                @foreach(var city in Model.Where(c=>c.IsDeleted==false))
                {
                    <tr>
                        <td> @count </td>
                        <td> @city.Name </td>
                        <td>
                            <a asp-controller="City" asp-action="Update" asp-route-id="@city.Id" class="btn btn-primary">Update</a>
                            <a asp-controller="City" asp-action="Delete" asp-route-id="@city.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    count++;
                }
                </tbody>
            </table>
            <div class="justify-content-center" style="text-align: center">
                <a asp-controller="City" asp-action="Create" style="margin: 2%" class="btn btn-success">Create</a>
            </div>
        </div>
    </div>
</div>